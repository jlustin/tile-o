Class ActionTile {
	state {
		Active {
			land() / {
			} ->  Inactive;
		}
		Inactive {
			land()	[almostActive()] / {
			} -> Active;
			land()	[!almostActive()] / {
			} -> Inactive;
		}
	}
	int inactivePeriod;
	1 -> 1 ActionTile tile;
	
	private boolean almostActive() {
		return getTurnsUntilActive() == 1;
	}

}