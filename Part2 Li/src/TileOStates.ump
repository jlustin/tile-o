class ActionTile {
	tileStatus {
		Active {
			land [inactivityPeriod == 0] -> / {
				doLand();
			} Active;
			land [inactivityPeriod > 0] -> / {
				doLand();
			} Inactive;
		}
		Inactive {
			land [turnsUntilActive == 1] -> / {
				doLand();
			} Active
			land [turnsUntilActive > 0] -> / {
				doLand();
			} Inactive
		}
	}
}

